%h1 New Instructor
%form(action="/instructor" method="post")
  %label(for="name") Name
  %input(type="text" name="name" placeholder="Rafael Nadal" value="#{@instructor.name}")
  %label(for="location") Location
  %input(type="text" name="location" placeholder="123 Elephant Rd, Meriden, CT")
  %input(type="submit" value="Save") <a class="button" href="/instructors">Cancel</a>
